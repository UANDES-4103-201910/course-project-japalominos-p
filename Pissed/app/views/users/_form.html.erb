<%= form_for(@user, url: user_path(@user), html: { method: :put}) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nick_name %>
    <%= form.text_field :nick_name %>
  </div>

<% if current_user.admin? %>
  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password %>
    <%= form.text_field :password_confirmation %>
  </div>
<% end %>

 <% if current_user.superadmin? %>
  <div class="field">
    <%= form.label :admin %>
    <%= form.check_box :admin %>
      
  </div>
<div class="field">
    <%= form.label :geofence_ver %>
    <%= form.check_box :geofence_ver %>
  </div>

  <div class="field">
    <%= form.label :geofence %>
    <%= form.check_box :geofence %>
  </div>
<% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
